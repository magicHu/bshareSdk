	text-align: right;
}

.avatar {
	float: left;
}
.news {
	background-color: gray;
	border: solid 1px black;
	float: left;
}
.news img {
	float: left;
}
.news p {
	margin-left: 10px;
	float: right;
}

.clear {
	clear: both;
}
.clear:after {
	content: ".";
	height: 0;
	visibility: false;
	display: block;
	clear: both;
}

</style>

